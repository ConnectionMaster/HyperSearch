                            <Setter Property="Text" Value="5"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontFamily" Value="Marlett"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>

                        <Style x:Key="TextBlockArrowStyleUpLeft" TargetType="TextBlock" BasedOn="{StaticResource TextBlockArrowStyleBase}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListView},Path=Orientation}" Value="Horizontal">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="270"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                        <Style x:Key="TextBlockArrowStyleDownRight" TargetType="TextBlock" BasedOn="{StaticResource TextBlockArrowStyleBase}">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListView},Path=Orientation}" Value="Horizontal">
                                    <Setter Property="RenderTransform">
