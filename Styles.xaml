                    <Border x:Name="Bd" FocusVisualStyle="{x:Null}"  BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Background="{TemplateBinding Background}" Padding="1" SnapsToDevicePixels="true">

                        <ItemsControl Style="{StaticResource GridStyle}">
                            <ScrollViewer Focusable="false" Padding="{TemplateBinding Padding}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                            <Border Style="{StaticResource scrollUpIndicatorStyle}">
                                <TextBlock Style="{StaticResource TextBlockArrowStyleUpLeft}"/>
                            </Border>
                            <Border Style="{StaticResource scrollDownIndicatorStyle}">
                                <TextBlock Style="{StaticResource TextBlockArrowStyleDownRight}"/>
                            </Border>


                        </ItemsControl>

                        <Border.Effect>
                            <eff:Saturation SaturationValue="1"/>
                        </Border.Effect>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="false">
                            <Trigger.EnterActions>
                                <BeginStoryboard >
                                    <Storyboard >
                                        <DoubleAnimation From="1" To="0.5" FillBehavior="HoldEnd" Duration="00:00:00.4" Storyboard.TargetName="Bd" Storyboard.TargetProperty="(Effect).(SaturationValue)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard >
                                    <Storyboard >
                                        <DoubleAnimation From="0.5" To="1" FillBehavior="HoldEnd" Duration="00:00:00.4" Storyboard.TargetName="Bd" Storyboard.TargetProperty="(Effect).(SaturationValue)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
